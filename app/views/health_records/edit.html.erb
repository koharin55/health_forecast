<div class="max-w-3xl mx-auto">
  <div class="card rounded-3xl">
    <!-- ヘッダー -->
    <div class="px-4 sm:px-8 py-5 sm:py-6 border-b border-slate-200">
      <h2 class="text-2xl sm:text-3xl font-bold text-slate-900">記録を編集</h2>
      <p class="text-slate-600 mt-2 text-sm sm:text-base"><%= @health_record.recorded_at.strftime("%Y年%m月%d日") %>の記録</p>
    </div>

    <!-- フォーム -->
    <div class="px-4 sm:px-8 py-6 sm:py-8">
      <%= render "form", health_record: @health_record %>
    </div>
  </div>
</div>
