<div class="max-w-4xl mx-auto">
  <div class="mb-6">
    <h1 class="text-3xl font-bold text-gray-800">健康記録の詳細</h1>
    <p class="text-gray-600 mt-2"><%= @health_record.recorded_at.strftime("%Y年%m月%d日") %>の記録</p>
  </div>

  <div class="bg-white rounded-lg shadow-md p-6">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div class="border-b pb-4">
        <h3 class="text-sm font-medium text-gray-500">記録日</h3>
        <p class="mt-1 text-lg text-gray-900"><%= @health_record.recorded_at.strftime("%Y年%m月%d日") %></p>
      </div>

      <div class="border-b pb-4">
        <h3 class="text-sm font-medium text-gray-500">体重</h3>
        <p class="mt-1 text-lg text-gray-900">
          <%= @health_record.weight.present? ? "#{@health_record.weight} kg" : "未記録" %>
        </p>
      </div>

      <div class="border-b pb-4">
        <h3 class="text-sm font-medium text-gray-500">睡眠時間</h3>
        <p class="mt-1 text-lg text-gray-900">
          <%= @health_record.sleep_hours.present? ? "#{@health_record.sleep_hours} 時間" : "未記録" %>
        </p>
      </div>

      <div class="border-b pb-4">
        <h3 class="text-sm font-medium text-gray-500">運動時間</h3>
        <p class="mt-1 text-lg text-gray-900">
          <%= @health_record.exercise_minutes.present? ? "#{@health_record.exercise_minutes} 分" : "未記録" %>
        </p>
      </div>

      <div class="border-b pb-4">
        <h3 class="text-sm font-medium text-gray-500">歩数</h3>
        <p class="mt-1 text-lg text-gray-900">
          <%= @health_record.steps.present? ? number_with_delimiter(@health_record.steps) : "未記録" %>
        </p>
      </div>

      <div class="border-b pb-4">
        <h3 class="text-sm font-medium text-gray-500">心拍数</h3>
        <p class="mt-1 text-lg text-gray-900">
          <%= @health_record.heart_rate.present? ? "#{@health_record.heart_rate} bpm" : "未記録" %>
        </p>
      </div>

      <div class="border-b pb-4">
        <h3 class="text-sm font-medium text-gray-500">体調スコア</h3>
        <p class="mt-1 text-lg text-gray-900">
          <% if @health_record.mood.present? %>
            <span class="px-3 py-1 inline-flex text-sm font-semibold rounded-full
              <%= case @health_record.mood
                  when 5 then 'bg-green-100 text-green-800'
                  when 4 then 'bg-blue-100 text-blue-800'
                  when 3 then 'bg-yellow-100 text-yellow-800'
                  when 2 then 'bg-orange-100 text-orange-800'
                  when 1 then 'bg-red-100 text-red-800'
                  end %>">
              <%= @health_record.mood %>/5 -
              <%= case @health_record.mood
                  when 5 then 'とても良い'
                  when 4 then '良い'
                  when 3 then '普通'
                  when 2 then '悪い'
                  when 1 then 'とても悪い'
                  end %>
            </span>
          <% else %>
            未記録
          <% end %>
        </p>
      </div>
    </div>

    <% if @health_record.notes.present? %>
      <div class="mt-6">
        <h3 class="text-sm font-medium text-gray-500">メモ</h3>
        <p class="mt-2 text-gray-900 whitespace-pre-wrap"><%= @health_record.notes %></p>
      </div>
    <% end %>
  </div>

  <div class="mt-6 flex gap-3 flex-wrap">
    <%= link_to "編集", edit_health_record_path(@health_record), class: "bg-green-600 hover:bg-green-700 text-white px-6 py-3 rounded-md font-semibold" %>
    <%= link_to "一覧に戻る", health_records_path, class: "bg-gray-300 hover:bg-gray-400 text-gray-800 px-6 py-3 rounded-md font-semibold" %>
    <%= button_to "削除", @health_record, method: :delete,
        class: "bg-red-600 hover:bg-red-700 text-white px-6 py-3 rounded-md font-semibold",
        data: { turbo_confirm: "本当に削除しますか？" } %>
  </div>
</div>
