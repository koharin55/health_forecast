<% if current_user.location_configured? %>
  <div class="card rounded-2xl p-4 sm:p-5 animate-fade-in-up">
    <div class="flex items-center justify-between mb-3">
      <h3 class="text-base sm:text-lg font-bold text-slate-900 flex items-center gap-2">
        <span class="text-lg">&#128202;</span>
        体調予測
      </h3>
      <% if prediction_service.sufficient_analysis_data? %>
        <span class="text-xs text-emerald-600 bg-emerald-50 px-2 py-0.5 rounded-full flex items-center gap-1">
          <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
          </svg>
          個人分析済
        </span>
      <% end %>
    </div>

    <% if predictions.any? %>
      <!-- 4日間の予測：PC 4列 / モバイル 2x2 -->
      <div class="grid grid-cols-2 lg:grid-cols-4 gap-2 sm:gap-3">
        <% predictions.each_with_index do |prediction, index| %>
          <div class="bg-gradient-to-br <%= prediction_bg_class(prediction[:risk_level]) %> rounded-xl p-3 text-center">
            <p class="text-xs text-slate-500 mb-1"><%= prediction_date_label(index) %></p>
            <div class="mb-1"><%= prediction_risk_icon(prediction[:risk_level]) %></div>
            <p class="text-sm sm:text-base font-bold <%= prediction_text_class(prediction[:risk_level]) %>">
              <%= prediction[:risk_level_label] %>
            </p>
            <% if prediction[:forecast] && prediction[:forecast][:weather_code] %>
              <div class="flex items-center justify-center gap-1 mt-1">
                <span class="text-xl"><%= WeatherService.weather_icon(prediction[:forecast][:weather_code]) %></span>
                <% if prediction[:forecast][:pressure] %>
                  <span class="text-xs text-slate-500 mono"><%= prediction[:forecast][:pressure].round %>hPa</span>
                <% end %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    <% else %>
      <!-- データ収集中の表示（簡略版：詳細はアドバイスカードに表示） -->
      <div class="text-center py-4">
        <div class="text-3xl mb-2">&#128200;</div>
        <p class="text-slate-600 font-medium">分析データを収集中...</p>
        <p class="text-sm text-slate-500 mt-1">
          <%= link_to "マイページ", mypage_path, class: "text-sky-600 hover:underline" %>から過去データの天候を一括取得できます。
        </p>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="card rounded-2xl p-4 sm:p-5 animate-fade-in-up">
    <div class="flex items-center gap-2 mb-3">
      <span class="text-xl">&#128202;</span>
      <h3 class="text-base sm:text-lg font-bold text-slate-900">体調予測</h3>
    </div>
    <div class="bg-slate-50 rounded-xl p-3 text-center">
      <p class="text-slate-600 text-sm mb-2">地域を設定すると、天気予報に基づく体調予測が表示されます。</p>
      <%= link_to mypage_path(open: "region"), class: "inline-flex items-center gap-1 btn-primary px-4 py-1.5 rounded-full font-semibold text-sm" do %>
        <span>&#128205;</span> 地域を設定する
      <% end %>
    </div>
  </div>
<% end %>
