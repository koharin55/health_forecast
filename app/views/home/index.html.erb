<div class="w-full">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-4xl font-bold text-gray-800">ダッシュボード</h1>
    <%= link_to "新しい記録を追加", new_health_record_path, class: "bg-blue-500 hover:bg-blue-600 text-white px-6 py-3 rounded-lg font-semibold" %>
  </div>

  <!-- 統計サマリー -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
    <div class="bg-white rounded-lg shadow-md p-6">
      <h3 class="text-gray-500 text-sm font-semibold mb-2">総記録数</h3>
      <p class="text-3xl font-bold text-blue-600"><%= @total_records %></p>
    </div>

    <% if @latest_record %>
      <div class="bg-white rounded-lg shadow-md p-6">
        <h3 class="text-gray-500 text-sm font-semibold mb-2">最新の体重</h3>
        <p class="text-3xl font-bold text-green-600">
          <%= @latest_record.weight.present? ? "#{@latest_record.weight} kg" : "未記録" %>
        </p>
        <p class="text-xs text-gray-500 mt-1"><%= @latest_record.recorded_at.strftime("%Y年%m月%d日") %></p>
      </div>

      <div class="bg-white rounded-lg shadow-md p-6">
        <h3 class="text-gray-500 text-sm font-semibold mb-2">最新の体調</h3>
        <p class="text-3xl font-bold text-purple-600">
          <%= @latest_record.mood.present? ? "#{@latest_record.mood} / 5" : "未記録" %>
        </p>
        <p class="text-xs text-gray-500 mt-1"><%= @latest_record.recorded_at.strftime("%Y年%m月%d日") %></p>
      </div>
    <% else %>
      <div class="bg-white rounded-lg shadow-md p-6">
        <h3 class="text-gray-500 text-sm font-semibold mb-2">まだ記録がありません</h3>
        <p class="text-sm text-gray-600">最初の健康記録を追加しましょう</p>
      </div>
    <% end %>
  </div>

  <!-- グラフセクション -->
  <% if @recent_records.any? %>
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
      <!-- 体重グラフ -->
      <div class="bg-white rounded-lg shadow-md p-6">
        <h3 class="text-xl font-bold mb-4 text-gray-800">体重の推移</h3>
        <%= line_chart @recent_records.where.not(weight: nil).reverse.map { |r| [r.recorded_at, r.weight] },
            xtitle: "日付", ytitle: "体重 (kg)",
            library: { scales: { y: { beginAtZero: false } } } %>
      </div>

      <!-- 睡眠時間グラフ -->
      <div class="bg-white rounded-lg shadow-md p-6">
        <h3 class="text-xl font-bold mb-4 text-gray-800">睡眠時間の推移</h3>
        <%= line_chart @recent_records.where.not(sleep_hours: nil).reverse.map { |r| [r.recorded_at, r.sleep_hours] },
            xtitle: "日付", ytitle: "睡眠時間 (時間)" %>
      </div>

      <!-- 体調グラフ -->
      <div class="bg-white rounded-lg shadow-md p-6">
        <h3 class="text-xl font-bold mb-4 text-gray-800">体調スコアの推移</h3>
        <%= line_chart @recent_records.where.not(mood: nil).reverse.map { |r| [r.recorded_at, r.mood] },
            xtitle: "日付", ytitle: "体調スコア (1-5)",
            library: { scales: { y: { min: 1, max: 5 } } } %>
      </div>

      <!-- 運動時間グラフ -->
      <div class="bg-white rounded-lg shadow-md p-6">
        <h3 class="text-xl font-bold mb-4 text-gray-800">運動時間の推移</h3>
        <%= column_chart @recent_records.where.not(exercise_minutes: nil).reverse.map { |r| [r.recorded_at, r.exercise_minutes] },
            xtitle: "日付", ytitle: "運動時間 (分)" %>
      </div>
    </div>
  <% end %>

  <!-- 最近の記録 -->
  <div class="bg-white rounded-lg shadow-md p-6">
    <h3 class="text-xl font-bold mb-4 text-gray-800">最近の記録</h3>

    <% if @recent_records.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">日付</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">体重</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">睡眠</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">運動</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">体調</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">操作</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @recent_records.each do |record| %>
              <tr>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= record.recorded_at.strftime("%Y-%m-%d") %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= record.weight.present? ? "#{record.weight} kg" : "-" %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= record.sleep_hours.present? ? "#{record.sleep_hours}h" : "-" %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= record.exercise_minutes.present? ? "#{record.exercise_minutes}分" : "-" %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= record.mood.present? ? "#{record.mood}/5" : "-" %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                  <%= link_to "詳細", record, class: "text-blue-600 hover:text-blue-900 mr-3" %>
                  <%= link_to "編集", edit_health_record_path(record), class: "text-green-600 hover:text-green-900" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <div class="mt-4 text-center">
        <%= link_to "すべての記録を見る", health_records_path, class: "text-blue-600 hover:text-blue-900" %>
      </div>
    <% else %>
      <p class="text-gray-600 text-center py-8">まだ記録がありません。最初の記録を追加しましょう！</p>
    <% end %>
  </div>

  <!-- 将来的な機能のプレースホルダー -->
  <div class="mt-8 bg-blue-50 border-l-4 border-blue-500 p-6 rounded">
    <h3 class="text-lg font-semibold text-blue-800 mb-2">今後追加予定の機能</h3>
    <ul class="list-disc list-inside text-blue-700 space-y-1">
      <li>Apple Health / HealthKitからのデータ自動連携</li>
      <li>AIによる体調予測とアラート機能</li>
      <li>過去データの詳細分析とレポート生成</li>
      <li>パーソナライズされた健康アドバイスとTips</li>
      <li>PWA対応でスマホアプリのような操作性</li>
    </ul>
  </div>
</div>
