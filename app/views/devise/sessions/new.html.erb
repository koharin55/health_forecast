<div class="min-h-screen flex items-center justify-center px-4 py-12">
  <div class="max-w-md w-full">
    <!-- ロゴエリア -->
    <div class="text-center mb-10">
      <h1 class="logo text-5xl mb-3 flex items-center justify-center gap-2"><span>🌿</span>PreCare</h1>
      <p class="text-slate-600 text-lg">予防ケアで、健やかな毎日を</p>
    </div>

    <!-- ログインカード -->
    <div class="card rounded-3xl p-10">
      <h2 class="text-3xl font-bold text-slate-600 mb-8">ログイン</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
        <!-- メールアドレス -->
        <div>
          <%= f.label :email, "メールアドレス", class: "block text-sm font-semibold text-slate-700 mb-2" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "your@email.com", class: "input-field w-full px-4 py-3.5 rounded-xl text-slate-900" %>
        </div>

        <!-- パスワード -->
        <div>
          <%= f.label :password, "パスワード", class: "block text-sm font-semibold text-slate-700 mb-2" %>
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "••••••••", class: "input-field w-full px-4 py-3.5 rounded-xl text-slate-900" %>
        </div>

        <!-- Remember me & パスワード忘れ -->
        <div class="flex items-center justify-between">
          <% if devise_mapping.rememberable? %>
            <label class="flex items-center cursor-pointer">
              <%= f.check_box :remember_me, class: "w-4 h-4 text-emerald-600 border-emerald-300 rounded focus:ring-emerald-500" %>
              <span class="ml-2.5 text-sm text-slate-600 font-medium">ログイン状態を保持</span>
            </label>
          <% end %>
          <%= link_to "パスワードを忘れた", new_password_path(resource_name), class: "text-sm link" if devise_mapping.recoverable? %>
        </div>

        <!-- ログインボタン -->
        <%= f.submit "ログイン", class: "btn-primary w-full text-white py-4 rounded-xl font-bold text-lg" %>
      <% end %>

      <!-- 区切り線 -->
      <div class="my-8 flex items-center">
        <div class="flex-1 border-t border-slate-300"></div>
        <span class="px-4 text-sm text-slate-500 font-medium">または</span>
        <div class="flex-1 border-t border-slate-300"></div>
      </div>

      <!-- 新規登録リンク -->
      <div class="text-center">
        <p class="text-slate-600">
          アカウントをお持ちでない方
          <%= link_to "新規登録", new_registration_path(resource_name), class: "link ml-1" %>
        </p>
      </div>
    </div>

    <!-- フッター -->
    <div class="text-center mt-8 text-sm text-slate-600">
      <p>&copy; 2026 PreCare. All rights reserved.</p>
    </div>
  </div>
</div>
